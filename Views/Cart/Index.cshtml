@model Books.Models.Cart

<h2>Cart</h2>
<hr/>

@if (Model.CartItems.Count > 0)
{
    <table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Book</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model.CartItems)
{
    var bookTotal = item.Book.Price * item.Quantity;

    <tr>
        <td>
            <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">
                <img src="@item.Book.Image" style="height: 4em">
            </a>
        </td>
        <td>
            <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">@item.Book.Title</a>
        </td>
        <td>
            @bookTotal.ToString("C", new System.Globalization.CultureInfo("en-IE"))
        </td>
        <td>
            <div class="quantity-controls">
                <a asp-controller="Cart" asp-action="ReduceQuantity" asp-route-id="@item.Book.Id"><i class="fa-solid fa-minus"></i></a>
                <span>@item.Quantity</span>
                <a asp-controller="Cart" asp-action="IncreaseQuantity" asp-route-id="@item.Book.Id"><i class="fa-solid fa-plus"></i></a>
            </div>
        </td>
        <td></td>
    </tr>
}

        </tbody>
        <tfoot>
                <td style="padding: 10px;"></td>
                <td style="padding: 10px;"></td>
                <td style="padding: 10px;"></td>
                <td style="padding: 10px;"></td>
                <td class="text-right" style="padding: 10px;">
                    <strong>Total: @(Model?.GetCartTotal().ToString("C", new System.Globalization.CultureInfo("en-IE")))</strong>
                </td>
        </tfoot>
    </table>
     <a class="a-cleanup" asp-controller="Cart" asp-action="CleanCart"><div class="btn btn-primary float-right mr-5"><i class="fa-solid fa-trash-can"></i> Cart is Empty</div></a>
}
else
{
    <h3 class="text-center"> Cart is Empty</h3>
}
