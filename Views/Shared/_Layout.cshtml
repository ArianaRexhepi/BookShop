<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Books</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Books.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/myCss.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Books</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Store", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                asp-area="" asp-controller="Store" asp-action="Index">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Store", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Bestseller", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                asp-area="" asp-controller="Store" asp-action="Index">Bestseller</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Store", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Magazines", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                asp-area="" asp-controller="Store" asp-action="Index">Magazines</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Store", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Audiobooks", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                asp-area="" asp-controller="Store" asp-action="Index">Audiobooks</a>
                        </li>



                        @* @if(User.IsInRole("Admin"))
                        { *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Audiobooks", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) ||
                                                 ViewContext.RouteData.Values["Controller"].ToString().Equals("Book", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) ||
                                                 ViewContext.RouteData.Values["Controller"].ToString().Equals("Bestseller", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) ||
                                                 ViewContext.RouteData.Values["Controller"].ToString().Equals("Magazines", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) ||
                                                 ViewContext.RouteData.Values["Controller"].ToString().Equals("Admin", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Roles", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                                Lists
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Audiobooks", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                    asp-area="" asp-controller="Audiobooks" asp-action="Index">Audiobooks List</a>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Book", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                    asp-area="" asp-controller="Book" asp-action="Index">Book List</a>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Bestseller", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                    asp-area="" asp-controller="Bestseller" asp-action="Index">Bestseller List</a>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Magazines", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                    asp-area="" asp-controller="Magazines" asp-action="Index">Magazines List</a>
                                <a class="dropdown-item @(ViewContext.RouteData.Values["Controller"].ToString().Equals("Admin", StringComparison.OrdinalIgnoreCase) && ViewContext.RouteData.Values["Action"].ToString().Equals("Roles", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                                    asp-area="" asp-controller="Admin" asp-action="Roles">Roles</a>
                            </div>
                        </li>


                        @* } *@
                    </ul>
                    <partial name="_LoginPartial" />
                    @if(User.Identity.IsAuthenticated){
                    <a class="nav-link text-dark float-right" asp-area="" asp-controller="Cart" asp-action="Index"><i
                            class="fa-solid fa-cart-shopping"></i></a>
                            }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Books - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
