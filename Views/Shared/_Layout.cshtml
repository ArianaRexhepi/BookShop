@{
    bool IsActiveLink(string controller, string action)
    {
        var routeData = ViewContext?.RouteData?.Values;

        var currentController = routeData?["Controller"]?.ToString();
        var currentAction = routeData?["Action"]?.ToString();

        return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase) &&
        string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase);
    }

    bool IsActiveDropdownLink(string controller, string action)
    {
        var routeData = ViewContext?.RouteData?.Values;

        var currentController = routeData?["Controller"]?.ToString();
        var currentAction = routeData?["Action"]?.ToString();

        return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase) &&
        string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase);
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Books</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Books.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/myCss.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/site.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AriLibrary</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                         <li class="nav-item">
                            <a class="nav-link text-dark @(IsActiveLink("Category", "Index") ? "active" : "")" asp-area=""
                                asp-controller="Category" asp-action="Index">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(IsActiveLink("Store", "Index") ? "active" : "")" asp-area=""
                                asp-controller="Store" asp-action="Index">Books</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                         <li class="nav-item">
                            <a class="nav-link text-dark @(IsActiveLink("BStore", "Index") ? "active" : "")" asp-area=""
                                asp-controller="BStore" asp-action="Index">Bestseller</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(IsActiveLink("MagStore", "Index") ? "active" : "")" asp-area=""
                                asp-controller="MagStore" asp-action="Index">Magazines</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(IsActiveLink("AudStore", "Index") ? "active" : "")" asp-area=""
                                asp-controller="AudStore" asp-action="Index">Audiobooks</a>
                        </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark @(IsActiveDropdownLink("Audiobooks", "Index") ||
                                                 IsActiveDropdownLink("Book", "Index") ||
                                                 IsActiveDropdownLink("Bestseller", "Index") ||
                                                 IsActiveDropdownLink("Magazines", "Index") ||
                                                 IsActiveDropdownLink("Admin", "Roles") ? "active" : "")" href="#"
                                    id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Lists
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item @(IsActiveLink("Audiobooks", "Index") ? "active" : "")"
                                        asp-area="" asp-controller="Audiobooks" asp-action="Index">Audiobooks List</a></li>
                                    <li><a class="dropdown-item @(IsActiveLink("Book", "Index") ? "active" : "")" asp-area=""
                                        asp-controller="Book" asp-action="Index">Book List</a></li>
                                    <li><a class="dropdown-item @(IsActiveLink("Bestseller", "Index") ? "active" : "")"
                                        asp-area="" asp-controller="Bestseller" asp-action="Index">Bestseller List</a></li>
                                    <li><a class="dropdown-item @(IsActiveLink("Magazines", "Index") ? "active" : "")"
                                        asp-area="" asp-controller="Magazines" asp-action="Index">Magazines List</a></li>
                                    <li><a class="dropdown-item @(IsActiveLink("Admin", "Roles") ? "active" : "")" asp-area=""
                                        asp-controller="Admin" asp-action="Roles">Roles</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Books - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
