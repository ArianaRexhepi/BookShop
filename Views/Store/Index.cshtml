@model IEnumerable<Books.Models.Book>

@{
    ViewData["Title"] = "Bookstore";
}

<style>
.h5{
  text-align: center;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  margin: auto;
}

.book-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin: 50px auto;
}

.book-card {
  width: 230px;
  height: 530px; 
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  margin: 10px;
  cursor: pointer;
  transition: transform 0.2s;
}

.book-card:hover {
  transform: scale(1.02);
}

.book-card-image {
  width: 100%;
  height: 60%; 
  object-fit: cover;
  border-top-left-radius: 8px;
  border-bottom-left-radius: 8px;
}

.book-card-details {
  padding: 16px;
}

.book-card-title {
  font-size: 20px;
  margin: 0;
}

.book-card-author {
  margin-top: 8px;
  color: #555555;
}
.book-price {
        font-weight: bold;
        color: #2ecc71;
    }

 .book-actions {
        padding: 15px;
        text-align: center;
    }
</style>

<link rel="stylesheet" href="~/css/styles.css">

<h2>Explore Our Book Collection</h2>
<div className="book-container">
        @foreach (var book in Model)
        {
            <div class="book-card">
                <a asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">
                <img src="@book.Image" class="book-card-image" alt="Book Image">
                <div class="book-card-details">
                    <h5 class="book-title">@book.Title</h5>
                    <p class="book-price">Price: @book.Price.ToString("C")</p>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-primary ms-2">
                        Add to Cart
                    </a>
                </div>
                    </a>
                </div>
        }
</div>
