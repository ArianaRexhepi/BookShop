@model IEnumerable<Books.Models.Book>

@{
    ViewData["Title"] = "Store";
}

<h2 class="my-4 text-center">Welcome to Our Bookstore</h2>
<div class="container-sm">
    <div class="row row-cols-1 row-cols-md-3">
        @foreach (var book in Model)
        {
            <div class="col mb-4">
                <div class="card h-100 rounded shadow">
                    <a asp-controller="Store" asp-action="Details" asp-route-id="@book.Id" class="text-decoration-none text-dark">
                        <img src="@book.Image" class="card-img-top" alt="Book Image">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title mb-2">@book.Title</h5>
                            <p class="card-text mb-1">Price: @book.Price.ToString("C")</p>
                            <div class="d-flex justify-content-end">
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-primary">
                                    <i class="fa-solid fa-cart-shopping"></i> Add to Cart
                                </a>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
