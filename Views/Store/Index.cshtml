@model IEnumerable<Books.Models.Book>

@{
    ViewData["Title"] = "Bookstore";
}

<link rel="stylesheet" href="~/css/styles.css">

<div class="book-container">
    <h2 class="book-heading">Explore Our Book Collection</h2>

    <div class="book-grid">
        @foreach (var book in Model)
        {
            <div class="book-card">
                <img src="@book.Image" class="book-image" alt="Book Image">
                <div class="book-details">
                    <h3 class="book-title">@book.Title</h3>
                    <p class="book-author">By: @book.Author</p>
                    <p class="book-price">Price: @book.Price.ToString("C")</p>
                </div>
                <div class="book-actions">
                    <a asp-controller="Store" asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary">
                        View Details
                    </a>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-primary ms-2">
                        Add to Cart
                    </a>
                </div>
            </div>
        }
    </div>
</div>
