@model IEnumerable<Books.Models.Book>

@{
    ViewData["Title"] = "Bookstore";
}

<style>
    .book-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .book-heading {
        text-align: center;
        font-size: 24px;
        margin-bottom: 30px;
    }

    .book-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .book-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .book-image {
        width: 100%;
        height: auto;
        border-bottom: 1px solid #ddd;
    }

    .book-details {
        padding: 15px;
    }

    .book-title {
        font-size: 18px;
        margin-bottom: 8px;
    }

    .book-author {
        font-style: italic;
        color: #555;
        margin-bottom: 8px;
    }

    .book-price {
        font-weight: bold;
        color: #2ecc71;
    }

    .book-actions {
        padding: 15px;
        text-align: center;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-outline-primary {
        color: #3498db;
        border: 2px solid #3498db;
        background-color: transparent;
    }

    .btn-outline-primary:hover {
        background-color: #3498db;
        color: #fff;
    }

    .btn-primary {
        color: #fff;
        background-color: #3498db;
        border: 2px solid #3498db;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        border: 2px solid #2980b9;
    }
</style>

<link rel="stylesheet" href="~/css/styles.css">

<div class="book-container">
    <h2 class="book-heading">Explore Our Book Collection</h2>

    <div class="book-grid">
        @foreach (var book in Model)
        {
            <div class="book-card">
                <img src="@book.Image" class="book-image" alt="Book Image">
                <div class="book-details">
                    <h3 class="book-title">@book.Title</h3>
                    <p class="book-author">By: @book.Author</p>
                    <p class="book-price">Price: @book.Price.ToString("C")</p>
                </div>
                <div class="book-actions">
                    <a asp-controller="Store" asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary">
                        View Details
                    </a>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-primary ms-2">
                        Add to Cart
                    </a>
                </div>
            </div>
        }
    </div>
</div>
