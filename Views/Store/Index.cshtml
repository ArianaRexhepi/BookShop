@model IEnumerable<Books.Models.Book>

@{
    ViewData["Title"] = "Bookstore";
}

<h2 class="my-4">Explore Our Book Collection</h2>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-2">
            <div class="card">
                <a asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.Image" class="card-img-top">
                    <div class="card-body" style="height: 6em;">
                        <h5 class="mb-3">@book.Title</h5>
                    </div>
                    <div class="card-body">
                        <span class="card-text">Price: @book.Price.ToString("C")</span>
                        <a asp-controller="" asp-action="" asp-route-id="@book.Id" class="btn btn-primary float-right">
                            <i class="fa-solid fa-cart-shopping"></i>Add to Cart
                        </a>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
